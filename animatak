<script>
// البحث في الصفحة الرئيسية
const searchInput = document.getElementById('searchInput');
searchInput.addEventListener('input', function(){
    const filter = searchInput.value.toLowerCase();
    const cards = document.querySelectorAll('.anime-card');
    cards.forEach(card => {
        const name = card.querySelector('h3').textContent.toLowerCase();
        card.style.display = name.includes(filter) ? '' : 'none';
    });
});

// عرض صفحة الأنمي
function openAnime(id){
    document.getElementById('homePage').classList.add('hidden');
    const animes = document.querySelectorAll('.anime-detail');
    animes.forEach(a => a.classList.add('hidden'));
    document.getElementById(id).classList.remove('hidden');
    scrollTo(0,0);
}

// العودة للصفحة الرئيسية
function showHome(){
    document.getElementById('homePage').classList.remove('hidden');
    const animes = document.querySelectorAll('.anime-detail');
    animes.forEach(a => a.classList.add('hidden'));
    scrollTo(0,0);
}

// تشغيل الحلقات داخل الموقع
function playEpisode(url){
    const player1 = document.getElementById('videoPlayer');
    const player2 = document.getElementById('videoPlayer2');
    if(player1) player1.src = url;
    if(player2) player2.src = url;
}
</script>

